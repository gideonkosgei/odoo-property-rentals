                    <!--                                    <field name="is_occupied" />-->
                    <!--                                    <field name="rent_price" />-->
                    <!--                                    <field name="status" />t-->
                    <!--                                    <field name="electricity_meter_number" />-->
                    <!--                                    <field name="water_meter_number" />-->
                    <!--                                    <field name="gas_meter_number" />-->
                    <!--                                </list>-->
                    <!--                            </field>-->
                    <!--                        </page>  -->
                    <!--                    </notebook>-->
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="property_unit_view_tree" model="ir.ui.view">
        <field name="name">property.unit.view.list</field>
        <field name="model">property.unit</field>
        <field name="arch" type="xml">
            <list>
                <field name="id"/>
                <field name="name"/>
                <field name="property_id"/>
                <field name="floor_number"/>
                <field name="area_size"/>
                <field name="bedrooms"/>
                <field name="bathrooms"/>
                <field name="is_occupied"/>
                <field name="rent_price"/>
                <field name="status"/>
                <field name="electricity_meter_number"/>
                <field name="water_meter_number"/>
                <field name="gas_meter_number"/>
            </list>
        </field>
    </record>
</odoo>
