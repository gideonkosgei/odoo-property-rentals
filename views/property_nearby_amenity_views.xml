<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Property facilities action -->
    <record id="property_nearby_amenity_action" model="ir.actions.act_window">
        <field name="name">Nearby Public Amenity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.nearby.amenity</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Close Public Amenity!
            </p>
        </field>
    </record>

    <record id="property_nearby_amenity_view_tree" model="ir.ui.view">
        <field name="name">property.nearby.amenity.view.list</field>
        <field name="model">property.nearby.amenity</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="property_id"/>
                <field name="list_name_id"/>
                <field name="list_value_id"/>
                <field name="distance"/>
            </list>
        </field>
    </record>
</odoo>
